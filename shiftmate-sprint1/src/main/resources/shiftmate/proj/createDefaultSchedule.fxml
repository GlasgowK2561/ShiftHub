<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="1250.0" style="-fx-background-color: #E6FFFD;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="shiftmate.proj.CreateDefaultScheduleController">
    <center>
        <VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" spacing="10" alignment="TOP_CENTER">
            <Label text="Weekly Schedule" />
            
            <!-- TableView to display shifts for each day -->
            <TableView fx:id="scheduleTableView" prefHeight="400.0" prefWidth="600.0">
                <columns>
                    <!-- Other columns -->
                    <TableColumn fx:id="shiftColumn" text="Shifts" />
                    <TableColumn fx:id="mondayColumn" text="Monday" />
                    <TableColumn fx:id="tuesdayColumn" text="Tuesday" />
                    <TableColumn fx:id="wednesdayColumn" text="Wednesday" />
                    <TableColumn fx:id="thursdayColumn" text="Thursday" />
                    <TableColumn fx:id="fridayColumn" text="Friday" />
                    <TableColumn fx:id="saturdayColumn" text="Saturday" />
                    <TableColumn fx:id="sundayColumn" text="Sunday" />
                </columns>
            </TableView>

            <!-- Button to add a shift for each day -->
            <HBox spacing="10" alignment="CENTER">
                <Button text="Add Shift (Monday)" onAction="#addShiftMonday" />
                <Button text="Add Shift (Tuesday)" onAction="#addShiftTuesday" />
                <Button text="Add Shift (Wednesday)" onAction="#addShiftWednesday" />
                <Button text="Add Shift (Thursday)" onAction="#addShiftThursday" />
                <Button text="Add Shift (Friday)" onAction="#addShiftFriday" />
                <Button text="Add Shift (Saturday)" onAction="#addShiftSaturday" />
                <Button text="Add Shift (Sunday)" onAction="#addShiftSunday" />
            </HBox>
            
            <!-- Button to save the schedule -->
            <HBox spacing="10" alignment="CENTER">
                <Button text="Save Schedule" onAction="#saveSchedule" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
